<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:System="clr-namespace:System;assembly=netstandard"
             x:Class="MauiAppHotel.MainPage"
             Title="Início">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Faça sua reserva" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" />

            <!-- Número de adultos -->
            <Label Text="Número de adultos:" />
            <Entry x:Name="EntryAdultos" Keyboard="Numeric" Placeholder="Digite a quantidade de adultos" />

            <!-- Número de crianças -->
            <Label Text="Número de crianças:" />
            <Entry x:Name="EntryCriancas" Keyboard="Numeric" Placeholder="Digite a quantidade de crianças" />

            <!-- Tipo de suíte -->
            <Label Text="Tipo de suíte:" />
            <Picker x:Name="PickerQuartos" Title="Selecione o tipo de suíte" />

            <!-- Datas de check-in e check-out -->
            <Label Text="Data de check-in:" />
            <DatePicker x:Name="DateCheckIn" Date="{x:Static System:DateTime.Today}" />

            <Label Text="Data de check-out:" />
            <DatePicker x:Name="DateCheckOut" Date="{x:Static System:DateTime.Today}" />

            <!-- Botão calcular -->
            <Button Text="Calcular valor da hospedagem" Clicked="Calcular_Clicked" />

            <!-- Label para mostrar resultado -->
            <Label x:Name="LabelResultado" FontSize="Medium" TextColor="Green" HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
